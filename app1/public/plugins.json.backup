{
  "plugins": [
    {
      "id": "app2-widget",
      "name": "App 2 Widget",
      "description": "Widget from App 2 with Moment.js integration",
      "entry": "http://localhost:3002/remoteEntry.js",
      "module": "Widget",
      "scope": "app2",
      "behavior": "manual",
      "category": "widget"
    },
    {
      "id": "app3-widget",
      "name": "App 3 Widget", 
      "description": "Widget from App 3 with React hooks and Moment.js",
      "entry": "http://localhost:3003/remoteEntry.js",
      "module": "Widget",
      "scope": "app3",
      "behavior": "manual",
      "category": "widget"
    },
    {
      "id": "app4-widget",
      "name": "App 4 Widget",
      "description": "Interactive widget with real-time clock",
      "entry": "http://localhost:3004/remoteEntry.js",
      "module": "Widget",
      "scope": "app4",
      "behavior": "manual",
      "category": "widget"
    },
    {
      "id": "app4-dashboard",
      "name": "App 4 Dashboard",
      "description": "Task management dashboard component",
      "entry": "http://localhost:3004/remoteEntry.js",
      "module": "Dashboard",
      "scope": "app4",
      "behavior": "manual",
      "category": "dashboard"
    },
    {
      "id": "app4-header-action",
      "name": "App4 Header Menu",
      "description": "Popover menu for App4 actions",
      "entry": "http://localhost:3004/remoteEntry.js",
      "module": "HeaderAction",
      "scope": "app4",
      "injection": {
        "target": "header",
        "method": "append",
        "order": 1
      }
    },
    {
      "id": "app4-sidebar-widget-start",
      "name": "App4 Clock (Start)",
      "description": "Live clock widget for sidebar - positioned at start",
      "entry": "http://localhost:3004/remoteEntry.js",
      "module": "SidebarWidget",
      "scope": "app4",
      "injection": {
        "target": "sidebar",
        "method": "prepend",
        "order": -10
      }
    },
    {
      "id": "app4-sidebar-widget-middle",
      "name": "App4 Clock (Middle)",
      "description": "Live clock widget for sidebar - positioned in middle",
      "entry": "http://localhost:3004/remoteEntry.js",
      "module": "SidebarWidget",
      "scope": "app4",
      "injection": {
        "target": "sidebar",
        "method": "append",
        "order": 0
      }
    },
    {
      "id": "app4-sidebar-widget-end",
      "name": "App4 Clock (End)",
      "description": "Live clock widget for sidebar - positioned at end",
      "entry": "http://localhost:3004/remoteEntry.js",
      "module": "SidebarWidget",
      "scope": "app4",
      "injection": {
        "target": "sidebar",
        "method": "append",
        "order": 10
      }
    }
  ]
}
